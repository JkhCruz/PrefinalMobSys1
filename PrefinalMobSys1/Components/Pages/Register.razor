@page "/register"
<h3>Register</h3>
@if (!string.IsNullOrWhiteSpace(StatusMessage))
{
    <div class="alert alert-@Status">
        <i class="fa fa-info-circle"></i>&nbsp;
        @StatusMessage
    </div>
}


<center><table>
    <tr>
        <td><b><label>Username:</label></b></td>
        <td><input type="text" @bind="Model.Username" /></td>
    </tr>
    <tr>
        <td><label>Password:</label></td>
        <td><input type="password" @bind="Model.Password" /></td>
    </tr>
    <tr>
        <td><label>First Name:</label></td>
        <td><input type="text" @bind="Model.FirstName" /></td>
    </tr>
    <tr>
        <td><label>Last Name:</label></td>
        <td><input type="text" @bind="Model.LastName" /></td>
    </tr>
    <tr>
        <td><label>Mobile:</label></td>
        <td><input type="text" @bind="Model.MobileNumber" /></td>
    </tr>
    <tr>
        <td><label>Address:</label></td>
        <td><textarea @bind="Model.Address"></textarea></td>
    </tr>
    </table>
</center>
<center>
<button @onclick="RegisterUser">
    Save
    </button>
</center>

<style>
    body{
        background-color: black;
        color: gold;
        font-family:Consolas,sans-serif;
        font-size: 20px;

    }
    tr,td{
        padding: 10px;
        column-gap: 20px;
        
    }

    

    button{
        background-color:gold;
        border-radius:30px;
        font-size:30px;
    }

    h3{
        text-align:center;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        background-color: gold;
        color: black;
        border-radius:10px;
    }
</style>